                <Grid Grid.Row="0" Grid.Column="7">
                    <Rectangle Fill="{StaticResource DarkTileColor}" />
                    <Image Name="whiteRook2" MouseDown="ChessPiece_MouseDown" Source="pieces/whiteRook.png" />
                </Grid>

                <Grid Grid.Row="1" Grid.Column="0">
                    <Rectangle Fill="{StaticResource DarkTileColor}" />
                    <Image Name="whitePawn1" MouseDown="ChessPiece_MouseDown" Source="pieces/whitePawn.png" />
