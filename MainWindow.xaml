        <!-- Left whitespace -->
        <GridSplitter Grid.Column="0" Width="60" Background="White" />

        <Border BorderBrush="Black" BorderThickness="5" Grid.Column="1">
            <UniformGrid Name="uniformGrid" Rows="8" Columns="8">
                <!-- Create the chessboard tiles using rectangles -->
                <!-- Add the piece icons using Grid and Image controls -->
                <Grid Grid.Row="0" Grid.Column="0">
                    <Rectangle Fill="{StaticResource LightTileColor}" />
                    <Image Name="whiteRook1" MouseDown="ChessPiece_MouseDown" Source="pieces/whiteRook.png" />
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Rectangle Fill="{StaticResource DarkTileColor}" />
                    <Image Name="whiteKnight1" MouseDown="ChessPiece_MouseDown" Source="pieces/whiteKnight.png" />
